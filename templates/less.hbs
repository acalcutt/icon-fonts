@font-face {
  font-family: "{{fontName}}";
  src: url("{{fontName}}.eot?") format("embedded-opentype");
}

@font-face {
  font-family: "{{fontName}}";
  src: data-uri("{{fontName}}.woff") format("woff"),
    url("{{fontName}}.ttf") format("truetype"),
    url("{{fontName}}.svg#{{fontName}}") format("svg");
  font-weight: normal;
  font-style: normal;
}

@icon-font-styles: {
  font-style: normal;
  font-weight: normal !important;
  font-variant: normal;
  line-height: 1;
  text-transform: none;
  speak: none;
  -webkit-font-smoothing: antialiased;
};

{{#each codepoints}}
.{{../classPrefix}}{{@key}},
{{/each}}
.{{baseClass}} {
  font-family: {{fontName}} !important;
  @icon-font-styles();
}

{{#each codepoints}}
.{{../classPrefix}}{{@key}}:before {
  content: "\\{{this}}";
}
{{/each}}
